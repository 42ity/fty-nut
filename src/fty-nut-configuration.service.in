[Unit]
Description=fty-nut-configuration service
Requires=network.target malamute.service
After=network.target malamute.service
PartOf=bios.target

# This implies starting-after/stopping-before fty-db.target as well
After=fty-asset.service
Requires=fty-asset.service
BindsTo=fty-asset.service

After=fty-security-wallet.service
Requires=fty-security-wallet.service
BindsTo=fty-security-wallet.service

[Service]
Type=simple
# User=@uid@
Environment="prefix=@prefix@"
Environment='SYSTEMD_UNIT_FULLNAME=%n'
EnvironmentFile=/etc/default/bios-db-rw
ExecStart=@prefix@/bin/fty-nut-configuration -c @sysconfdir@/@PACKAGE@/fty-nut-configuration.cfg
Restart=always

[Install]
WantedBy=bios.target
